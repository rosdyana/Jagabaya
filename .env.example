# Environment Variables for Jagabaya

# =============================================================================
# LLM Provider API Keys (set at least one)
# =============================================================================

# OpenAI (default provider)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key

# Azure OpenAI
AZURE_API_KEY=your-azure-api-key
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview

# AWS Bedrock (uses AWS credentials)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION_NAME=us-east-1

# Groq
GROQ_API_KEY=your-groq-api-key

# Together AI
TOGETHER_API_KEY=your-together-api-key

# Mistral AI
MISTRAL_API_KEY=your-mistral-api-key

# Ollama (local, no key needed)
# OLLAMA_API_BASE=http://localhost:11434

# =============================================================================
# Jagabaya Configuration
# =============================================================================

# Default LLM provider (openai, anthropic, google, azure, ollama, etc.)
JAGABAYA_LLM_PROVIDER=openai

# Default model
JAGABAYA_LLM_MODEL=gpt-4o

# Enable safe mode (prevents destructive actions)
JAGABAYA_SAFE_MODE=true

# Require confirmation before tool execution
JAGABAYA_REQUIRE_CONFIRMATION=true

# Output directory for reports
JAGABAYA_OUTPUT_DIR=./reports

# Log level (DEBUG, INFO, WARNING, ERROR)
JAGABAYA_LOG_LEVEL=INFO
